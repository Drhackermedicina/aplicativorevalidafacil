rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if request.auth != null;
      // Permite escrita para os UIDs específicos OU se for uma conta de serviço (request.auth.token.email existe)
      allow write: if request.auth != null && (
        request.auth.uid == 'zpJfB1NZjTO6FYTUZsIvrpSrp4g2' ||
        request.auth.uid == 'F8NOHX6eCxPORAf8x3faSq3Wy9D3' ||
        request.auth.uid == 'xN0BqF7vvbbwpWlMNxhORH48Ri33' ||
        request.auth.token.email != null // Adiciona esta linha para Service Accounts
      );
    }
  }
}
